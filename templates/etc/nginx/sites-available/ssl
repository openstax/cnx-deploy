# HTTPS
upstream frontend {
    server {{ frontend_domain }}{{ varnish_port == 80 and '' or ':{}'.format(varnish_port) }} weight=5;
}
upstream arclishing {
    server {{ arclishing_domain }}{{ varnish_port == 80 and '' or ':{}'.format(varnish_port) }} weight=5;
}


ssl_certificate {{ root_prefix }}/etc/ssl/certs/cnx.pem;
ssl_certificate_key {{ root_prefix }}/etc/ssl/private/cnx.key;

#add_header Strict-Transport-Security "max-age=63072000; includeSubDomains";
#add_header X-Frame-Options DENY;
proxy_connect_timeout       300;
proxy_send_timeout          300;
proxy_read_timeout          300;
send_timeout                300;

server {
    listen 443 ssl;
    server_name {{ arclishing_domain }};

    ssl on;

    location / {
        proxy_pass http://arclishing;
        proxy_set_header host {{ arclishing_domain }};
        proxy_set_header X-Secure true;
    }
}

server {
    listen 443 ssl;
    server_name {{ zope_domain }};
    client_max_body_size 50m;

    ssl on;

    location / {
        proxy_pass http://{{ zope_domain }};
        proxy_set_header host {{ zope_domain }};
        proxy_set_header X-Secure true;
    }
}

server {
    listen 443 ssl;
    server_name {{ frontend_domain }};

    ssl on;

    location / {
        proxy_pass http://frontend;
        proxy_set_header host {{ frontend_domain }};
        proxy_set_header X-Secure true;
    }
}
